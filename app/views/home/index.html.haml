.d-flex.justify-content-end
  %div=link_to 'Create user', new_user_path, class: 'mr-4'
  -if any_user_exist?
    %div=link_to 'Create order', new_order_path

.mt-5
  %h2.mb-3 Search users or orders
  =form_with(url: '/search', method: 'get', id: 'search-by-all-form') do
    .form-group.d-flex
      =text_field_tag :query, nil,
                      class: 'form-control',
                      required: true
      =submit_tag 'Search', class: 'btn btn-primary ml-3'

.mt-4
  %table.table#search-results
    %thead.thead-dark
    %tbody
